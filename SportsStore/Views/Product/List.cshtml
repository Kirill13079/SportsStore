@model SportsStore.Models.ProductsListViewModel

@{
    ViewBag.Title = Model.CurrentCategory;

}

@if (Model.Products.Count() > 0)
{
    <div class="us">
        @foreach (var p in Model.Products)
        {
            Html.RenderPartial("ProductSummary", p);
        }
    </div>
    <div class="pager anim" style="--delay: .6s">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List",new { page = x, category = Model.CurrentCategory, search = Model.Search }))
    </div>
}
else
{
    <div class="main-header anim" style="--delay: 0s">Ничего не найдено :(</div>
    <div class="humanoid anim" style="--delay: 0s">
        <div class="sketch">
            <div class="bee-sketch red-humanoid"></div>
            <div class="bee-sketch blue-humanoid"></div>
        </div>
    </div>
}


